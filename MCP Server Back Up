import path from 'path';

// Create server instance
const server = new Server(
  {
    name: 'collin-complete-real-estate-mcp',
    version: '4.1.0',
  },
  {
    capabilities: {
      tools: {},
    },
  }
);

// Complete Real Estate Analysis + GHL Integration + ENHANCED DUAL MEMORY SEARCH
